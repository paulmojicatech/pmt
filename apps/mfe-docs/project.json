{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/mfe-docs/src",
  "prefix": "pmt",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:webpack-browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/mfe-docs",
        "index": "apps/mfe-docs/src/index.html",
        "main": "apps/mfe-docs/src/main.ts",
        "polyfills": "apps/mfe-docs/src/polyfills.ts",
        "tsConfig": "apps/mfe-docs/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": ["apps/mfe-docs/src/favicon.ico", "apps/mfe-docs/src/assets"],
        "styles": ["apps/mfe-docs/src/styles.scss"],
        "scripts": [],
        "customWebpackConfig": {
          "path": "apps/mfe-docs/webpack.config.js"
        },
        "buildLibsFromSource": false
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/mfe-docs/src/environments/environment.ts",
              "with": "apps/mfe-docs/src/environments/environment.prod.ts"
            }
          ],
          "outputHashing": "all",
          "customWebpackConfig": {
            "path": "apps/mfe-docs/webpack.prod.config.js"
          }
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nrwl/angular:webpack-server",
      "configurations": {
        "production": {
          "browserTarget": "mfe-docs:build:production"
        },
        "development": {
          "browserTarget": "mfe-docs:build:development"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "publicHost": "http://localhost:4200"
      }
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "mfe-docs:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "apps/mfe-docs/src/**/*.ts",
          "apps/mfe-docs/src/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/mfe-docs"],
      "options": {
        "jestConfig": "apps/mfe-docs/jest.config.js",
        "passWithNoTests": true
      }
    },
    "serve-mfe": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": ["nx serve mfe-login", "nx serve mfe-docs"]
      }
    }
  },
  "tags": []
}
